root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
quote_type = single

[Makefile]
indent_style = tab

[*.js]
space_after_control_statements = true
space_after_anonymous_functions = true
spaces_around_operators = true
spaces_in_brackets = hybrid
